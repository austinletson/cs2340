<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Time"
        android:inputType="time"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/editText"
        android:ems="10"
        android:hint="Date"
        android:inputType="date"
        android:layout_toStartOf="@+id/editText" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Report Number"
        android:text="TextView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="12dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:contentDescription="Name of Worker"
        android:text="TextView"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:id="@+id/conditionSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/waterLocation"
        android:layout_marginTop="11dp" />

    <TextView
        android:id="@+id/virusPPMTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:text="Virus PPM"
        android:layout_above="@+id/contaminantPPMEditText"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginBottom="29dp" />

    <TextView
        android:id="@+id/contaminantPPMTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:text="Contaminant PPM"
        android:layout_above="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="90dp" />

    <EditText
        android:id="@+id/virusPPMEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/virusPPMTextView"
        android:layout_alignEnd="@+id/textView2"
        android:layout_alignRight="@+id/textView2"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:ems="10"
        android:hint="0"
        android:inputType="number" />

    <EditText
        android:id="@+id/contaminantPPMEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/contaminantPPMTextView"
        android:layout_alignBottom="@+id/contaminantPPMTextView"
        android:layout_alignLeft="@+id/virusPPMEditText"
        android:layout_alignStart="@+id/virusPPMEditText"
        android:ems="10"
        android:hint="0"
        android:inputType="number" />

    <EditText
        android:id="@+id/waterLocationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editText"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Water Location" />

    <EditText
        android:id="@+id/latitudeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/waterLocationText"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Latitude"
        android:layout_alignRight="@+id/virusPPMTextView"
        android:layout_alignEnd="@+id/virusPPMTextView" />

    <EditText
        android:id="@+id/longitudeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Longitude"
        android:layout_below="@+id/latitudeText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/contaminantPPMTextView"
        android:layout_alignEnd="@+id/contaminantPPMTextView" />

    <EditText
        android:id="@+id/latitudeDecimal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/waterLocationText"
        android:layout_toEndOf="@+id/longitudeText"
        android:layout_toRightOf="@+id/longitudeText"
        android:ems="10"
        android:hint="0.00"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/longitudeDecimal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/latitudeDecimal"
        android:layout_alignRight="@+id/latitudeDecimal"
        android:layout_below="@+id/latitudeDecimal"
        android:ems="10"
        android:hint="0.00"
        android:inputType="numberDecimal" />

</RelativeLayout>