<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="87dp"
        android:id="@+id/usernameLabel"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/usernameLabel"
        android:layout_alignLeft="@+id/usernameLabel"
        android:layout_alignStart="@+id/usernameLabel"
        android:layout_marginTop="14dp"
        android:id="@+id/register_usernameEdit"
        android:textSize="24sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/register_usernameEdit"
        android:layout_alignLeft="@+id/register_usernameEdit"
        android:layout_alignStart="@+id/register_usernameEdit"
        android:layout_marginTop="73dp"
        android:id="@+id/register_passwordEdit"
        android:layout_alignRight="@+id/register_usernameEdit"
        android:layout_alignEnd="@+id/register_usernameEdit" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:id="@+id/register_nameEdit"
        android:textAlignment="center"
        android:hint="Name" />

    <Button
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cancelButton"
        android:textSize="24sp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/register_passwordEdit"
        android:layout_alignStart="@+id/register_passwordEdit"
        android:layout_marginBottom="26dp" />

    <Button
        android:text="Register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/registerButton"
        android:textSize="24sp"
        android:layout_alignBaseline="@+id/cancelButton"
        android:layout_alignBottom="@+id/cancelButton"
        android:layout_alignRight="@+id/register_passwordEdit"
        android:layout_alignEnd="@+id/register_passwordEdit"
        android:onClick="onRegisterPressed" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_above="@+id/cancelButton"
        android:layout_alignLeft="@+id/cancelButton"
        android:layout_alignStart="@+id/cancelButton"
        android:id="@+id/register_typeSpinner" />

    <TextView
        android:text="Type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/typeSpinner"
        android:layout_alignLeft="@+id/typeSpinner"
        android:layout_alignStart="@+id/typeSpinner"
        android:layout_marginBottom="15dp"
        android:id="@+id/typeLabel"
        android:textSize="24sp"
        android:layout_toLeftOf="@+id/registerButton"
        android:layout_toStartOf="@+id/registerButton" />

    <TextView
        android:text="Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:id="@+id/passwordLabel"
        android:textSize="24sp"
        android:layout_below="@+id/register_usernameEdit"
        android:layout_alignLeft="@+id/register_usernameEdit"
        android:layout_alignStart="@+id/register_usernameEdit" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/registerButton"
        android:layout_toRightOf="@+id/passwordLabel"
        android:layout_toEndOf="@+id/passwordLabel"
        android:id="@+id/register_errorTextView" />

</RelativeLayout>