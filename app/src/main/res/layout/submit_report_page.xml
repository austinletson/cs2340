<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reportNumberText"
        android:textSize="30sp"
        android:layout_alignBaseline="@+id/reportNumberLabel"
        android:layout_alignBottom="@+id/reportNumberLabel"
        android:layout_toRightOf="@+id/reportNumberLabel"
        android:layout_toEndOf="@+id/reportNumberLabel"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:layout_alignTop="@+id/dateLabel"
        android:layout_toRightOf="@+id/dateLabel"
        android:layout_toEndOf="@+id/dateLabel"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:id="@+id/dateInput"
        android:textSize="24sp" />

    <TextView
        android:text="Reporter:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reporterNameLabel"
        android:textSize="24sp"
        android:layout_below="@+id/reportNumberText"
        android:layout_alignLeft="@+id/reportNumberLabel"
        android:layout_alignStart="@+id/reportNumberLabel"
        android:layout_marginTop="24dp" />

    <TextView
        android:text="Report #:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:id="@+id/reportNumberLabel"
        android:textSize="24sp"
        android:layout_below="@+id/dateInput"
        android:layout_alignLeft="@+id/dateLabel"
        android:layout_alignStart="@+id/dateLabel" />

    <TextView
        android:text="Water Location Address:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/waterLocationLabel"
        android:textSize="24sp"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/reporterNameLabel"
        android:layout_alignLeft="@+id/reporterNameLabel"
        android:layout_alignStart="@+id/reporterNameLabel" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/nameInput"
        android:textSize="24sp"
        android:layout_alignBaseline="@+id/reporterNameLabel"
        android:layout_alignBottom="@+id/reporterNameLabel"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/reportNumberLabel"
        android:layout_alignLeft="@+id/reportNumberText"
        android:layout_alignStart="@+id/reportNumberText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/addressInput"
        android:textSize="24sp"
        android:singleLine="false"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/waterLocationLabel"
        android:layout_alignStart="@+id/waterLocationLabel" />

    <TextView
        android:text="Type of Water:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/typeLabel"
        android:layout_below="@+id/addressInput"
        android:layout_alignLeft="@+id/addressInput"
        android:layout_alignStart="@+id/addressInput"
        android:layout_marginTop="19dp"
        android:textSize="24sp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/typeLabel"
        android:layout_toRightOf="@+id/typeLabel"
        android:layout_toEndOf="@+id/typeLabel"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:id="@+id/typeSpinner" />

    <TextView
        android:text="Water Conditon:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/typeLabel"
        android:layout_alignLeft="@+id/typeLabel"
        android:layout_alignStart="@+id/typeLabel"
        android:layout_marginTop="32dp"
        android:id="@+id/waterConditionLabel"
        android:textSize="24sp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/waterConditionSpinner"
        android:layout_alignBottom="@+id/waterConditionLabel"
        android:layout_toRightOf="@+id/waterConditionLabel"
        android:layout_toEndOf="@+id/waterConditionLabel"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cancelButton"
        android:text="Cancel"
        android:textSize="24sp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/reportNumberText"
        android:layout_alignEnd="@+id/reportNumberText"
        android:layout_marginBottom="37dp" />

    <TextView
        android:text="Date:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:id="@+id/dateLabel"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_marginLeft="37dp"
        android:layout_marginStart="37dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:fontFamily="sans-serif" />

    <Button
        android:text="Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/submitButton"
        android:textSize="24sp"
        android:layout_alignBaseline="@+id/cancelButton"
        android:layout_alignBottom="@+id/cancelButton"
        android:layout_alignRight="@+id/addressInput"
        android:layout_alignEnd="@+id/addressInput" />

</RelativeLayout>